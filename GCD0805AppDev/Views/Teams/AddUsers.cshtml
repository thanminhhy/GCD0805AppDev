@model GCD0805AppDev.ViewModels.UserTeamsViewModel
@{
    ViewBag.Title = "AddUsers";
}

<h2>AddUsers</h2>
@using (Html.BeginForm("AddUsers", "Teams", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Team Name</label>
        @Html.DropDownListFor(m => m.TeamId,
            new SelectList(Model.Teams, "Id", "Name"),
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label></label>
        @Html.DropDownListFor(m => m.UserId,
             new SelectList(Model.Users, "Id", "Email"),
             new { @class = "form-control" }
         )
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}